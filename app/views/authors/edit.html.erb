<%= form_with model: @author, local: true do |form| %>

  <h1>Edit <%= @author.name %></h1>

  <% if @author.errors.any? %>
    <div>
      <h2>
        <%= pluralize(@author.errors.count, "error") %>
        prohibited this author from being saved:
      </h2>
      <ul>
        <% @author.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </p>
  <p>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </p>
  <p>
    <%= form.label :homepage %>
    <%= form.text_field :homepage %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to "Back to all authors", authors_path %>